            </dependency>
            <dependency>
                <groupId>cn.luis.coca</groupId>
                <artifactId>coca-jackson</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.luis.coca</groupId>
                <artifactId>coca-dto</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.luis.coca</groupId>
                <artifactId>coca-exception</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>cn.luis.coca</groupId>
                <artifactId>coca-util</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
